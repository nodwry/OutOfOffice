@model OutOfOffice.Models.Employee

@{
    ViewBag.Title = "Update Employee";
}

<h2>Update Employee</h2>

<form asp-action="PostUpdateEmployee" method="post" class="form-horizontal">
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <input asp-for="Id" type="hidden" />

        <div class="form-group">
            <label asp-for="FullName" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Subdivision" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="Subdivision" class="form-control">
                    @foreach (var item in Enum.GetValues(typeof(OutOfOffice.Models.Subdivision)))
                    {
                        <option value="@item">@item</option>
                    }
                </select>
                <span asp-validation-for="Subdivision" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Position" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="Position" class="form-control">
                    @foreach (var item in Enum.GetValues(typeof(OutOfOffice.Models.Position)))
                    {
                        <option value="@item">@item</option>
                    }
                </select>
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="EmployeeStatus" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="EmployeeStatus" class="form-control">
                    @foreach (var item in Enum.GetValues(typeof(OutOfOffice.Models.EmployeeStatus)))
                    {
                        <option value="@item">@item</option>
                    }
                </select>
                <span asp-validation-for="EmployeeStatus" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="PeoplePartnerId" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="PeoplePartnerId" class="form-control" asp-items="ViewBag.PeoplePartners"></select>
                <span asp-validation-for="PeoplePartnerId" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Balance" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="Balance" class="form-control" />
                <span asp-validation-for="Balance" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group" style="margin-top: 20px;">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-primary">Update</button>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
